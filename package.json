    "lint:ci": "eslint src/**/*.ts",
    "test:ci": "NODE_ENV=test node --expose-gc --no-compilation-cache ./node_modules/jest/bin/jest.js --coverage --no-cache --runInBand --config ./test/jest.config.json --logHeapUsage"
